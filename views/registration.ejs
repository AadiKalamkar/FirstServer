<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <!-- Add Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .form-container {
            background-color: #1a202c;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body class="bg-gray-900 text-gray-200">
    <div class="max-w-md mx-auto mt-4 p-8 form-container">
        <h2 class="text-3xl font-bold mb-6 text-center text-white">User Registration</h2>
        <form action="/register/home" method="POST">
            <!-- Name -->
            <div class="mb-3">
                <label for="name" class="block text-sm font-medium mb-2">Name</label>
                <input type="text" id="name" name="name" class="w-full p-1 border border-gray-700 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <!-- Contact -->
            <div class="mb-3">
                <label for="contact" class="block text-sm font-medium mb-2">Contact</label>
                <input type="text" id="contact" name="contact" class="w-full p-1 border border-gray-700 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="block text-sm font-medium mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full p-1 border border-gray-700 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="block text-sm font-medium mb-2">Password</label>
                <input type="password" id="password" name="password" class="w-full p-1 border border-gray-700 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <!-- Confirm Password -->
            <div class="mb-3">
                <label for="confirmPassword" class="block text-sm font-medium mb-2">Confirm Password</label>
                <input type="password" id="confirmPassword" name="cpassword" class="w-full p-1 border border-gray-700 rounded-lg bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <a href="./login"><h2 class=" mb-2 ml-32 text-center text-white">Already have an account</h2></a>
            <!-- Submit Button -->
            <div class="flex justify-between">
                <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition duration-200 ease-in-out">Register</button>
                <button type="reset" class="w-full bg-gray-600 text-white py-3 ml-4 rounded-lg hover:bg-gray-700 transition duration-200 ease-in-out">Reset</button>
            </div>
        </form>
    </div>
</body>
</html>
